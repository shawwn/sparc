#!/bin/bash

dir="$(pwd)"
bin="$0"
while [ -L "$(dirname "${bin}")" ]
do
  bin="$(readlink "$(dirname "${bin}")")/$(basename "${bin}")"
done
while [ -L "${bin}" ]
do
    x="$(readlink "${bin}")"
    cd "$(dirname "${bin}")"
    bin="${x}"
done
cd "$(dirname "${bin}")"
home="$(dirname "$(pwd)")"
cd "${dir}"

source "${home}/bin/setup.sh"
set +e

export ARC_HOST_FLAGS="${ARC_HOST_FLAGS} ${ARC_DEBUG:+-l errortrace}"

exec "${ARC_HOST}" ${ARC_HOST_FLAGS} -t "${ARC_HOME}/as.scm" -- "$@"
